[connection]
id=client
uuid={{ vpn_int_uuid }}
type=vpn
permissions=

[vpn]
ca=/etc/openvpn/ca.crt
cipher=aes-256-cbc
comp-lzo=adaptive
connection-type=password
dev=tun
ns-cert-type=server
password-flags=0
remote={{ vpn_endpoints | join(",") }}
remote-random=yes
reneg-seconds=0
ta=/etc/openvpn/tls.key
ta-dir=1
service-type=org.freedesktop.NetworkManager.openvpn
user-name={{ vpn_user }}

[vpn-secrets]
password={{ vpn_password }}

[ipv4]
dns-search=
method=auto

[ipv6]
addr-gen-mode=stable-privacy
dns-search=
method=auto
